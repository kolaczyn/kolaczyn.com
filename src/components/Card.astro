---
export type Props = {
  imgUrl: string;
  title: string;
  description: string;
  href: string;
};
const { description, imgUrl, title, href } = Astro.props;
---

<a
  class="rounded-2xl overflow-hidden bg-gray-100 shadow hover:shadow-lg transition-shadow"
  href={href}
>
  <img height="304" width="304" src={imgUrl} alt={title} />
  <div class="p-2">
    <div class="font-bold text-lg">{title}</div>
    <di class="opacity-70">{description}</di>
  </div>
</a>
