---
export type Props = {
  href: string;
  currentPath?: string;
  openInNewTab?: boolean;
};
const { currentPath, href } = Astro.props;
const openInNewTab = Astro.props.openInNewTab ?? false;
---

<a
  target={openInNewTab ? "_blank" : "_self"}
  rel={openInNewTab ? "noopener noreferrer" : ""}
  class={`py-4 hover:text-gray-700 transition-colors duration-200 ${
    currentPath === href ? "underline" : "hover:underline"
  }`}
  href={href}><slot /></a
>
