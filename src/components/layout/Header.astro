---
import HeaderLink from "./HeaderLink.astro";

const currentPath = Astro.url.pathname;
---

<header class="bg-zinc-100 shadow">
  <div
    class="mx-auto max-w-2xl p-2 sm:p-4 flex flex-col sm:flex-row items-center justify-between"
  >
    <a class="font-bold text-lg hover:text-gray-700" href="/">kolaczyn.com</a>
    <ul class="flex gap-x-3">
      <li>
        <HeaderLink openInNewTab href="https://github.com/kolaczyn">
          github
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href="mailto:kolaczyn@protonmail.com">mail</HeaderLink>
      </li>
      <li>
        <HeaderLink href="/projects" currentPath={currentPath}>
          projects
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href="/blog" currentPath={currentPath}>blog</HeaderLink>
      </li>
    </ul>
  </div>
</header>
